<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp"
    android:weightSum="11">
    <TableLayout
        android:layout_weight="9"
        android:id="@+id/tbl"
        android:padding="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_weight="2"
            android:layout_marginBottom="3sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcfcfb">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="50sp"
                android:layout_weight="0.1"
                android:background="@drawable/thu"
                android:gravity="center" />
            <TextView
                android:textSize="18dp"
                android:textColor="#080808"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản Thu"
                android:gravity="left"
                android:paddingTop="13sp"
                android:layout_marginLeft="20sp"
                android:layout_weight="0.1" />
            <TextView
                android:textSize="18dp"
                android:textColor="#0a0909"
                android:id="@+id/TxtKhoanThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="right" />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#9f8383" />
        <TableRow
            android:layout_weight="2"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="3sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfc">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="50sp"
                android:layout_weight="0.1"
                android:background="@drawable/chi"
                android:gravity="center" />
            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản Chi"
                android:gravity="left"
                android:layout_marginLeft="20sp"
                android:textColor="#080808"
                android:paddingTop="13sp"
                android:layout_weight="0.1" />
            <TextView
                android:textSize="18dp"
                android:id="@+id/TxtKhoanChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#0b0b0b"
                android:gravity="right" />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#bc9898" />
        <TableRow
            android:layout_weight="2"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="3sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="50sp"
                android:layout_weight="0.1"
                android:background="@drawable/vay"
                android:gravity="center" />
            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản Vay"
                android:gravity="left"
                android:textColor="#060606"
                android:layout_marginLeft="20sp"
                android:paddingTop="13sp"
                android:layout_weight="0.1" />
            <TextView
                android:textSize="18dp"
                android:id="@+id/txtKhoanVay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#060606"
                android:gravity="right" />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#BBBBBB" />
        <TableRow
            android:layout_weight="2"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="3sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafaf8">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="50sp"
                android:layout_weight="0.1"
                android:background="@drawable/du"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản Dư"
                android:textSize="18dp"
                android:textColor="#0a0a0a"
                android:gravity="left"
                android:layout_marginLeft="20sp"
                android:paddingTop="13sp"
                android:layout_weight="0.1" />
            <TextView
                android:textSize="18dp"
                android:id="@+id/txtKhoanDu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#222222"
                android:gravity="right" />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_marginStart="140dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imgadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="6sp"
        android:textColor="#5711b9"
        android:background="@drawable/custom_buttom"
        android:text="Thêm" />
</LinearLayout>